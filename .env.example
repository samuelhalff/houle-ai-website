# Public site URL used in metadata and IndexNow host/keyLocation
NEXT_PUBLIC_SITE_URL=https://houle.ai

# Desktop/default tracking ID
# Google Analytics 4 Measurement ID (public)
NEXT_PUBLIC_GA_ID=G-BXZ54E31FL

# IndexNow key (also served at https://houle.ai/<INDEXNOW_KEY>.txt)
INDEXNOW_KEY=your-key-here

# Secret header to protect the reindex endpoint (/api/indexnow/reindex)
# Set this in your hosting env and in GitHub Actions secrets as INDEXNOW_SECRET
INDEXNOW_SECRET=your-secret-here

# Restart endpoint secret token
# Used by /api/restart to securely trigger application restart via process.exit(0)
# Infomaniak's orchestrator will automatically restart the app when it exits
# Set this in your hosting env and in GitHub Actions secrets as RESTART_SECRET_TOKEN
RESTART_SECRET_TOKEN=

# Azure OpenAI (chat completions) for translations
# Endpoint should be the full chat completions URL without query params, or base + deployments path.
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4.1

# Azure Agent (with Bing grounding) for AI ressources update (optional)
# Set these to use --provider=azure-agent with scripts/ai-ressources-update.js
AZURE_AGENT_ENDPOINT=
AZURE_AGENT_API_KEY=
AZURE_AGENT_ID=
# Optional explicit chat URL if your service uses a non-standard path
# AZURE_AGENT_CHAT_URL=
